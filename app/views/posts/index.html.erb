<div class="overall">
  <div class="main">

    <div class="side-bar">
      <%= render partial: "shared/side_bar", locals: { post: @posts } %>
    </div>

    <div class="main-contents">
      <div class="index-header">
        <h1><i>Welcome to FLRP&S</i></h1>
      </div>
      <% if @posts.any? %>
        <div class="posts">
          <% @posts.each do |post| %>
            <%= render partial: "posts/posts", locals: { post: post } %>
          <% end %>
        </div>
      <% else %>
        <p class="not-content-message">該当する投稿はありません</p>
      <% end %>

      <%= paginate @posts, :window => 2 %>

    </div>

  </div>

  <%= render "shared/footer" %>
</div>
